<div>
    <h1>Example 2: Live validation</h1>
</div>
<form class="bs-docs-example form-horizontal">
    {{#if user.isValidated}}
        {{#if user.validationResult.hasError}}
            <div class="alert alert-error">
                <strong>Error!</strong><br>
                <ul>
                    {{#each error in user.validationResult.errors}}
                        <li>{{error}}</li>
                    {{/each}}
                </ul>
            </div>
        {{else}}
            <div class="alert alert-success">
                <strong>User is valid!</strong><br>
            </div>
        {{/if}}
    {{/if}}
    <div class="control-group" {{bindAttr class="view.inputName.validationResult.hasError:error:"}}>
        <label class="control-label" for="inputName">Name</label>
        <div class="controls">
            {{view App.ValidatorTextField viewName="inputName" id="inputName" valueBinding="user.name"}}
            <span class="help-inline">{{view.inputName.validationResult.error}}</span>
        </div>
    </div>
    <div class="control-group" {{bindAttr class="view.inputAge.validationResult.hasError:error:"}}>
        <label class="control-label" for="inputAge">Age</label>
        <div class="controls">
            {{view App.ValidatorTextField viewName="inputAge" id="inputAge" valueBinding="user.age"}}
            <span class="help-inline">{{view.inputAge.validationResult.error}}</span>
        </div>
    </div>
    <div class="control-group" {{bindAttr class="view.inputEmail.validationResult.hasError:error:"}}>
        <label class="control-label" for="inputEmail">Email</label>
        <div class="controls">
            {{view App.ValidatorTextField viewName="inputEmail" id="inputEmail" valueBinding="user.email"}}
            <span class="help-inline">{{view.inputEmail.validationResult.error}}</span>
        </div>
    </div>
    <div class="control-group" {{bindAttr class="view.inputZodiac.validationResult.hasError:error:"}}>
        <label class="control-label" for="inputZodiac">Zodiac</label>
        <div class="controls">
            {{view App.ValidatorTextField viewName="inputZodiac"  id="inputZodiac" valueBinding="user.zodiac"}}
            <span class="help-inline">{{view.inputZodiac.validationResult.error}}</span>
        </div>
    </div>
    <div class="control-group" {{bindAttr class="view.inputPassword.validationResult.hasError:error:"}}>
        <label class="control-label" for="inputPassword">Password</label>
        <div class="controls">
            {{view App.ValidatorTextField viewName="inputPassword" id="inputPassword" valueBinding="user.password"}}
            <span class="help-inline">{{view.inputPassword.validationResult.error}}</span>
        </div>
    </div>
    <div class="control-group" {{bindAttr class="view.inputPassword.validationResult.hasError:error:"}}>
        <label class="control-label" for="inputPassword2">Password 2</label>
        <div class="controls">
            {{view App.RepeatPasswordTextField id="inputPassword2" valueBinding="user.password2"}}
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn" {{action "clear"}}>Clear</button>
            <button type="submit" class="btn" {{action "validate"}}>Validate</button>
        </div>
    </div>
</form>