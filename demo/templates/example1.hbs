<div>
    <h1>Example 1: Basic usage</h1>
</div>
<form class="bs-docs-example form-horizontal">
    {{#if model.isValidated}}
        {{#if model.validationResult.hasError}}
            <div class="alert alert-error">
                <strong>Error!</strong><br>
                <ul>
                    {{#each error in model.validationResult.errors}}
                        <li>{{error}}</li>
                    {{/each}}
                </ul>
            </div>
        {{else}}
            <div class="alert alert-success">
                <strong>User is valid!</strong><br>
            </div>
        {{/if}}
    {{/if}}
    <div {{bind-attr class=":control-group model.validationResult.name.hasError:error:"}}>
        <label class="control-label" for="inputName">Name</label>
        <div class="controls">
            {{input id="inputName" value=model.name}}
            <span class="help-inline">{{model.validationResult.name.error}}</span>
        </div>
    </div>
    <div {{bind-attr class=":control-group model.validationResult.age.hasError:error:"}}>
        <label class="control-label" for="inputAge">Age</label>
        <div class="controls">
            {{input id="inputAge" value=model.age}}
            <span class="help-inline">{{model.validationResult.age.error}}</span>
        </div>
    </div>
    <div {{bind-attr class=":control-group model.validationResult.email.hasError:error:"}}>
        <label class="control-label" for="inputEmail">Email</label>
        <div class="controls">
            {{input id="inputEmail" value=model.email}}
            <span class="help-inline">{{model.validationResult.email.error}}</span>
        </div>
    </div>
    <div {{bind-attr class=":control-group model.validationResult.zodiac.hasError:error:"}}>
        <label class="control-label" for="inputZodiac">Zodiac</label>
        <div class="controls">
            {{input id="inputZodiac" value=model.zodiac}}
            <span class="help-inline">{{model.validationResult.zodiac.error}}</span>
        </div>
    </div>
    <div {{bind-attr class=":control-group model.validationResult.password.hasError:error:"}}>
        <label class="control-label" for="inputPassword">Password</label>
        <div class="controls">
            {{input id="inputPassword" value=model.password}}
            <span class="help-inline">{{model.validationResult.password.error}}</span>
        </div>
    </div>
    <div {{bind-attr class=":control-group model.validationResult.password.hasError:error:"}}>
        <label class="control-label" for="inputPassword2">Password 2</label>
        <div class="controls">
            {{input type="text" id="inputPassword2" value=model.password2}}
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn" {{action "clear"}}>Clear</button>
            <button type="submit" class="btn" {{action "validate"}}>Validate</button>
        </div>
    </div>
</form>
